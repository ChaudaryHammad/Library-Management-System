@{
}
@model IEnumerable<Book_Management_System.Models.ViewModels.BookReservationReportViewModel>


<div class="px-2 table-responsive p-0">
    <table class="table table-bordered text-nowrap">
        <thead class="">
            <tr>
                <th>Book Title</th>
                <th>Author</th>
                <th>Total Reservations</th>
                <th>Last Reserved Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BookTitle</td>
                    <td>@item.Author</td>
                    <td>@item.TotalReservations</td>
                    <td>@item.LastReservedDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>