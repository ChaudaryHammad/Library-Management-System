@model IEnumerable<Book_Management_System.Models.ViewModels.BookReservationReportViewModel>

@{
    ViewData["Title"] = "Least Reserved Books";
}
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="../../plugins/toastr/toastr.min.js"></script>
    <script src="../../dist/js/adminlte.min.js"></script>
    <script src="../../dist/js/demo.js"></script>



<div class="px-2 py-2 mb-2">
    <div class="col-sm-6 mb-3">
        <h1 class="text-dark">Least Reserved Books</h1>
    </div>




    <div class="row px-2">
        <div class="col-md-12">
            <div class="card">
                <div class="">
                    <div class="card-tools py-2 w-100">
                        <form method="get" action="@Url.Action("LeastReservedBooks", "Report")" class="mb-4">
                            <div class="d-flex justify-content-between g-3 align-items-center ">
                                <div class="col-md-5">
                                    <label for="startDate" class="form-label">Start Date:</label>
                                    <input type="date" id="startDate" name="startDate" class="form-control" value="@Context.Request.Query["startDate"]" />
                                </div>
                                <div class="col-md-5">
                                    <label for="endDate" class="form-label">End Date:</label>
                                    <input type="date" id="endDate" name="endDate" class="form-control" value="@Context.Request.Query["endDate"]" />
                                </div>
                                <div class="col-md-2 d-flex align-items-center" style="margin-top:30px">
                                    <button type="submit" class="btn btn-primary w-100 ">Filter</button>
                                </div>
                            </div>
                        </form>

                    </div>

                    @if (Model != null && Model.Any())
                    {
                        @Html.Partial("_BookReservationReportTable", Model)
                        <!-- Pagination Controls -->
                        <div class="float-right mr-2">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center mt-4">
                                    @if (ViewBag.PageNumber > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("ActiveUsers", new { startDate = Context.Request.Query["startDate"], endDate = Context.Request.Query["endDate"], pageNumber = 1, pageSize = ViewBag.PageSize })">Start</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("ActiveUsers", new { startDate = Context.Request.Query["startDate"], endDate = Context.Request.Query["endDate"], pageNumber = ViewBag.PageNumber - 1, pageSize = ViewBag.PageSize })">Previous</a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, ViewBag.PageNumber - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.PageNumber + 2); i++)
                                    {
                                        <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("ActiveUsers", new { startDate = Context.Request.Query["startDate"], endDate = Context.Request.Query["endDate"], pageNumber = i, pageSize = ViewBag.PageSize })">@i</a>
                                        </li>
                                    }

                                    @if (ViewBag.PageNumber < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("ActiveUsers", new { startDate = Context.Request.Query["startDate"], endDate = Context.Request.Query["endDate"], pageNumber = ViewBag.PageNumber + 1, pageSize = ViewBag.PageSize })">Next</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("ActiveUsers", new { startDate = Context.Request.Query["startDate"], endDate = Context.Request.Query["endDate"], pageNumber = ViewBag.TotalPages, pageSize = ViewBag.PageSize })">End</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>

                    }
                    else
                    {
                        <div class="alert alert-info text-center" role="alert">
                            No data available for the selected date range.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


</div>


<script>
    $(document).ready(function () {
        // Listen for changes on the startDate field
        $('#startDate').on('change', function () {
            // Get the selected startDate value
            var startDate = $(this).val();

            // Set the min attribute of the endDate field to the selected startDate
            $('#endDate').attr('min', startDate);
        });

        // Ensure the restriction is applied on page load if startDate is pre-filled
        var startDate = $('#startDate').val();
        if (startDate) {
            $('#endDate').attr('min', startDate);
        }
    });
</script>